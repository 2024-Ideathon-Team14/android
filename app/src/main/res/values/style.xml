<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="font_pretendard_bold">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="font_pretendard_semi_medium">
        <item name="fontFamily">@font/pretendard_semi_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="font_pretendard_medium">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="font_pretendard_regular">
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.TextInputLayout.corner10" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="errorEnabled">true</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/font_pretendard_bold</item>
        <item name="errorTextColor">@color/pink</item>
    </style>
</resources>